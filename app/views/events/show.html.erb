<div class="show-calendar-list">
  <h1 class="text-center">記録詳細</h1>

  <div class="show-event">
    <div class="show-event-detail">
      <p>
        <strong>タイトル</strong>
        <span><%= @event.title %></span>
      </p>

      <p>
        <strong>カテゴリ</strong>
        <span class="color-select <%= @event.category %>"><%= @event.category_i18n %></span>
      </p>

      <p>
        <strong>記録内容</strong>
        <span><%= hbr @event.body %></span>
      </p>

      <p>
        <strong>開始時間</strong>
        <span><%= I18n.l(@event.start_at, format: :long) %></span>
      </p>

      <p>
        <strong>終了時間</strong>
        <span><%= I18n.l(@event.end_at, format: :long) %></span>
      </p>
    </div>

    <%= link_to '修正する', edit_event_path(@event) %> |
    <%= link_to 'カレンダーへ戻る', events_path %> |
    <%= link_to '削除', @event, method: :delete, data: { confirm: '削除してもいいですか?' } %>
  </div>
</div>