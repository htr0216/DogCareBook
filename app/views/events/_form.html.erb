<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="new-event-form">
    <div class="form-group">
      <%= form.label :title, "タイトル", class: 'text-white' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :category, class: 'text-white' %>
      <%= form.text_field :category, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :body, "記録内容", class: 'text-white' %>
      <%= form.text_field :body, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :start_at, "開始時間", class: 'text-white' %>
      <%= form.datetime_select :start_at, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :end_at, "終了時間", class: 'text-white' %>
      <%= form.datetime_select :end_at, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit '記録を残す', class: 'new-block' %>
  </div>
<% end %>
