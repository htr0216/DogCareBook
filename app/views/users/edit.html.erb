<div class="users-edit-wrapper">
  <div class="container">
    <div class="users-edit-container">
      <h1 class="text-center">プロフィール編集</h1>

      <%= form_for @user, url: user_path do |f| %>
        <div class="form-group">
          <%= f.label :image_name, 'image' %>
          <%= f.file_field :image_name %>
        </div>
        <div class="form-group">
          <%= f.label :name, class: 'text-white' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: 'text-white' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :nickname, class: 'text-white' %>
          <%= f.text_field :nickname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :birth_date, class: 'text-white' %>
          <%= f.date_field :birth_date, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :sex, class: 'text-white' %>
          <%= f.text_field :sex, class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= f.submit "編集を完了する", class: 'new-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>