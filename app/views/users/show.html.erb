<div class="user-show">
    <div class="container">
        <div class="user">
            <div class="user-image">
                <% if @user.image_name? %>
                    <%= image_tag  @user.image_name.url, :class => "mw50" %>
                <% else %>
                    <%= image_tag "82214.jpg" %>
                <% end %>
            </div>
            
            <div class="user-informations">
                <div  class="user-group">
                    <h3>お名前</h3>
                    <p><%= @user.name %></p>
                 </div>   
                <div  class="user-group">
                    <h3>メールアドレス</h3>
                    <p><%= @user.email %></p>
                </div>
                <div  class="user-group">
                    <h3>愛犬のお名前</h3>
                    <p><%= @user.nickname %></p>
                </div>
                <div  class="user-group">
                    <h3>愛犬のお誕生日</h3>
                    <p><%= @user.birth_date %></p>
                </div>
                <div  class="user-group">
                    <h3>愛犬の性別</h3>
                    <p><%= @user.sex %></p>
                </div>
            
                <%= link_to '編集', edit_user_path(current_user.id), class: 'text-white' %>
                
            
            </div>
        </div>
        
        <ul class="user-tabs">
            <li class="active"><%= link_to ("#{@user.name}の投稿"), user_path(current_user.id) %></li>
            <li><%= link_to 'お気に入り', '#' %></li>
        </ul>
        
        <% @user.topics.each do |topic| %>
            <div class="user-topic-single">
                <h2 class="topic-author">
                    <%= topic.user.name %>
                </h2>
                <%= image_tag topic.image.url %>
          
                 <p class="topic-text">
                    <%= topic.description %>
                </p>
                <i class="fa fa-heart like-btn topic-index-icon fa-2x"></i>
                <i class="far fa-comment topic-index-icon fa-2x"></i>
                
                <div class="post-menus">
                <%= link_to '削除', topic_path(topic), method: :delete  %>
                </div>
             </div>
        <% end %>
    </div>
</div>