<body>
  
<header>
  <div class="header-logo">
    <%= link_to root_path do %>
    Dog Care Book
    <% end %>
  </div>
  <ul class="header-menus">
    <li>
      <a href="#">新規登録</a>
    </li>
    <li>
      <a href="#">ログイン</a>
    </li>
  </ul>
</header>


<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="users-new-container">
        <h1 class="text-center">新規登録</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'text-white' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: 'text-white' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          
          <div class="form-group">
          <%= f.submit "登録", class: 'btn-block' %>
        <% end %>
        <%= link_to 'ログインはこちら', '#',class: 'text-white' %>
          </div>
          
      </div>
    </div>
  </div>
</div>
</body>