<body>

  <div class="users-new-wrapper">
    <div class="container">
      <div class="row">
        <div class="users-new-container">
          <h1 class="text-center">新規登録</h1>
          <% @user.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <%= form_for @user, url: user_path do |f| %>
            <div class="form-group">
              <%= f.label :name, class: 'text-white' %>
              <%= f.text_field :name, placeholder: "15文字まで", class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: 'text-white' %>
              <%= f.text_field :email, placeholder: "***@**.**", class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'text-white' %>
              <%= f.password_field :password, placeholder: "半角英数字含めた、8~32文字", class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, class: 'text-white' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.submit "登録", class: 'new-block' %>
          <% end %>
            <%= link_to 'ログインはこちら', login_path, class: 'text-white' %>
            </div>
        </div>
      </div>
    </div>
  </div>

</body>