<div class="topic-index-wrapper">
  <div class="container">
  <h2 class="topic-list">投稿一覧</h2>
    <% @topics.each do |topic| %>
      <div class="topic-row">
        <div class="topic-index-single">
          <h2 class="topic-author">
            <%= topic.user.name %>
          </h2>
          <p class="topic-time">
            <%= I18n.l(topic.created_at, format: :long) %>
          </p>
          <%= image_tag topic.image.url %>
          
          <p class="topic-text">
            <%= topic.description %>
          </p>
          
          <% if !topic.favorite_users.include?(current_user) %>
            <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
              <i class="fa fa-heart like-btn topic-index-icon fa-2x"></i>
            <% end %>
          <% else %>
            <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
              <i class="fa fa-heart unlike-btn topic-index-icon fa-2x"></i>
            <% end %>
          <% end %>
          <%= topic.favorite_users.count %>
          
          <i class="far fa-comment topic-index-icon fa-2x"></i>

          <div class="post-menus">
            <%= link_to 'コメント一覧', topic_path(topic) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>