<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="topic-row">
        <div class="topic-index-single">
          <h2 class="topic-author">
            <%= topic.user.name %>
          </h2>
          <p class="topic-time">
            <%= topic.created_at.to_s(:datetime_jp) %>
          </p>
          <%= image_tag topic.image.url %>
          
          <p class="topic-text">
            <%= topic.description %>
          </p>

          <% if !topic.favorites_id.include?(current_user) %>
            <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
              <i class="fa fa-heart like-btn topic-index-icon fa-2x"></i>
            <% end %>
          <% else %>
            <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
              <i class="fa fa-heart unlike-btn topic-index-icon fa-2x"></i>
            <% end %>
          <% end %>

          <i class="far fa-comment topic-index-icon fa-2x"></i>
        </div>
      </div>
    <% end %>
  </div>
</div>