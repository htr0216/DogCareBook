<div class="topic-new-wrapper">
  <div class="container">
    <div class="topic-new">
      <h1 class="text-center">投稿する</h1>
      <%= form_for @topic do |f| %>
        <div class="new-form">
          <div class="form-group">
            <%= f.file_field :image%>
          </div>
      
          <% @topic.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
      
          <div class="form-group">
            <%= f.text_area :description, :size => "60x10", class: 'form-control' %>
          </div>
        </div>
        <% if logged_in? %>
          <div class="form-button">
            <%= f.submit '投稿', class: 'new-block' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
