<div class="comment-new-wrapper">
  <div class="container">
    <div class="comment-row">
      <h2 class="text-center">コメント入力</h2>
      <%= form_for @comment do |f| %>
        <% @comment.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.text_area :content, :size => "45x10", class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.submit 'コメントする', class: 'btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>